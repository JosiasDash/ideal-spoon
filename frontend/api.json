{
    "host": "localhost",
    "port": 8000,
    "login": {
        "method": "post",
        "body": [
            "email",
            "password"
        ],
        "path": "/login/",
        "secured": false,
        "response": [
            {
                "code": 200,
                "message": "Successfully authenticated",
                "access_token": "token",
                "refresh_token": "token"
            },
            {
                "code": 404,
                "message": "User not found"
            },
            {
                "code": 400,
                "message": "Invalid credentials"
            }
        ]
    },
    "signup": {
        "method": "post",
        "body": [
            "email",
            "dial_code",
            "phone",
            "password"
        ],
        "path": "/signup/",
        "secured": false,
        "response": [
            {
                "code": 200,
                "message": "Successfully authenticated",
                "access_token": "token",
                "refresh_token": "token"
            },
            {
                "code": 404,
                "message": "User not found"
            },
            {
                "code": 400,
                "message": "Invalid credentials"
            }
        ]
    }
}